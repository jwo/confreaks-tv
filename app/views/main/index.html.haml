#myCarousel.carousel.slide
  .carousel-inner
    .active.item.video-carousel 
      =render :partial => 'video_display', :locals => {:video => @video, :carousel_title => "Featured Video" }
    -@last_7.each_with_index do |video,i|
      .item.video-carousel
        =render :partial => 'video_display', :locals => {:video => video, :carousel_title => "#{(i + 1).ordinalize} most popular in the last seven days"}
  %a{:class => "carousel-control left", :href => "#myCarousel", "data-slide" => "prev"}
    <
  %a{:class => "carousel-control right", :href => "#myCarousel", "data-slide" => "next"}
    >